.ldcv .base
  width: 1024px
  max-width: 1024px
  iframe
    min-height: 60vh
  .inner .foot
    display: flex
    justify-content: cneter
    align-items: stretch
    gap: .5em
    padding: 1em
    .btn
      align-items: center
      justify-content: center
    .space
      flex: 1 0 auto

@media(max-width: 1024px)
  .ldcv
    padding: 0
  .ldcv:after
    display: none
  .ldcv .base
    width: 100%
    max-width: 100%
    min-height: 100%
    height: 100%
    .inner
      height: 100%
      overflow: scroll
      border-radius: 0
      border: 0
      .foot
        display: block
        .btn
          display: block
          margin: .25em
        .space
          display: none

