    forget: 'forget password'
    alt: 'or login with'
    or: 'or'
    contact: 'contact us'
    email: 'email'
    passwd: 'password'
    "reset passwd": "Reset Password"
    required: 'requried field'
    input:
      email:
        hint: 'your email address, as account name'
