      displayname:
        hint: "such as 'Paris Hillton'"
      passwd:
        hint: "at least 8 characters"
        invalid:
          short: 'password too short'
          incorrect: 'password incorrect'
    info:
      def:
        title: 'Sign In'
        desc: [
          "is your account. If you are the representative of your team, try using"
          "a team-shared"
          "email address."
          "Some features require you signing in before using."
        ]
      sfail:
        title: 'Sign Up Failed'
        desc: 'You may have signed up before, or there is a typo. You can:'
        hint: [
          'instead of sign up, try login'
