.ldcv.ldcvmgr.scroll(data-name="error-403"): .base.w-640.rwd: .inner.card: .card-body.text-center: .p-4
  script(type="@plotdb/block"): :lsc
    module.exports = pkg: i18n:
      en:
        "title": "Access Denied"
        "desc": "You don't have permission to access this resource."
        "p": [
          "sorry but the operation you wanted to perform was denied due to insufficient permissions. It may be because you used the wrong account or not logged in yet. Please check your account again, or verify that the resource you want to access is correct"
          [
            "If you think this is an error, you can directly"
            ", we will try to help you solve this problem. "
          ]
        ]
        contact: "Contact Us"
        close: "Close Dialog"
      "zh-TW":
        "title": "沒有存取權限"
        "desc": "因為您沒有權限存取指定的資源，所以我們沒辦法繼續。"
        "p": [
          "很抱歉，您剛剛想要進行的操作可能是因為權限不足的關係，被拒絕執行了。可能只是因為您使用了錯誤的帳號，或者尚未登入。請再次確認您的帳號，或者確認您想存取的資源是否有誤，然後再試一次。"
          [
            "如果您覺得這是個錯誤的話，您可以直接"
            "，讓我們試著為您解決這個問題。"
          ]
        ]
        contact: "聯繫我們"
        close: "關閉對話框"

  h1(t) title
  p(t) desc
  br
  .m-auto.text-left.text-muted
    p(t) p.0
    p #[span(t) p.1.0] #[a(href="#",onclick="lda.ldcvmgr.toggle('contact')",t) contact] #[span(t) p.1.1]
    br
    .row
      .col-md.mb-2: .btn.btn-outline-dark.btn-block.btn-lg(onclick="lda.ldcvmgr.toggle('contact')",t) contact
      .col-md.mb-2: .btn.btn-primary.btn-block.btn-lg(data-ldcv-set="",t) close
