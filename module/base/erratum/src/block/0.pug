div
  script(type="@plotdb/block"): :lsc
    module.exports = pkg:
      extend: {ns: \local, name: \error, path: \common.html}
      i18n:
        en:
          "title": "Ooops!"
          "desc": "The action you were just performing may not have been completed"
          "p": [
            "Sorry but there may have been some errors in the system when executing your recent requests, so some actions may not have been completed, or have failed."
            [
              "You can try again to see if there is any improvement, or"
              "see if there is anything we can help with"
            ]
          ]
          contact: "Contact Us"
          close: "Close Dialog"
        "zh-TW":
          "title": "糟糕，有東西出錯了！"
          "desc": "您剛剛正在進行的動作可能未能完成"
          p: [
            "很抱歉，系統在執行您剛剛的要求時可能出了些差錯，因此有些動作可能沒有完成，或者失敗了。"
            [
              "您可以再試一次看看是否會有所好轉，或者"
              "看看是否有什麼是我們可以幫上忙的。"
            ]
          ]
          "contact": "聯繫我們"
          "close": "關閉對話框"

  div(plug="content")
    h1(t) title
    p(t) desc
    br
    .m-auto.text-left.text-muted
      p(t) p.0
      p #[span(t) p.1.0] #[a(href="#",onclick="lda.ldcvmgr.toggle('contact')",t) contact] #[span(t) p.1.1]
  div(plug="cta")
    br
    .row
      .col-md.mb-2: .btn.btn-outline-dark.btn-block.btn-lg.mr-2(onclick="lda.ldcvmgr.toggle('contact')",t) contact
      .col-md: .btn.btn-primary.btn-block.btn-lg.mr-2(data-ldcv-set="",t) close

