.ldcv: .base.w-640: .inner.position-relative.card: .card-body.p-4
  style(type="text/css"): include:stylus index.styl
  script(type="@plotdb/block"): include:lsc index.ls
  h2 新增書籍
  .my-4: hr
  .mb-4
    .form-group
      label 書名
      input.form-control(name="name")
    .row
      .col-md
        .form-group.mb-2
          label ISBN
          input.form-control(name="isbn")
      .col-md
        .form-group
          label 作者
          input.form-control(name="author")
    .row
      .col-md
        .row
          .col-md
            .form-group
              label 分類
              input.form-control(name="cat")
          .col-md
            .form-group
              label 次分類
              input.form-control(name="subcat")
        .form-group
              label 類型
              input.form-control(name="type")
      .col-md
        .form-group
          label 上傳封面
          div: .btn.btn-upload.btn-outline-secondary
            input(type="file",name="cover")
            span 上傳 ..

  .my-4: hr
  .d-flex.justify-content-between.g-2.align-items-center
    .btn.btn-lg.btn-outline-secondary(data-ldcv-set="") 取消
    .btn.btn-lg.btn-primary.disabled(ld="add") 新增
