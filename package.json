{
  "author": "zbryikt",
  "name": "servebase",
  "license": "MIT",
  "description": "base server for constructing services",
  "version": "0.0.1",
  "homepage": "https://github.com/plotdb/servebase",
  "repository": {
    "type": "git",
    "url": "https://github.com/plotdb/servebase"
  },
  "engines": {
    "node": ">=15.11.0",
    "npm": ">=7.0.15"
  },
  "workspaces": [
    "module/base/version",
    "module/base/auth",
    "module/base/captcha",
    "module/base/consent",
    "module/base/erratum",
    "module/base/core",
    "module/base/navtop",
    "module/base/pugutil",
    "module/base/discuss",
    "module/base/connector",
    "backend/engine"
  ],
  "scripts": {
    "setup": "git config core.hooksPath tool/git-hooks",
    "start": "NODE_ENV=production ./start",
    "dev": "./start",
    "demo": "./start base",
    "try": "./node_modules/.bin/lsc log.ls",
    "prebuild": "rm -rf .backend; node_modules/.bin/lsc -co .backend backend",
    "pug-rebuild": "./tool/build.sh",
    "config": "cd config; ./build",
    "bootstrap": "npx bootstrap.build -c config/base/bootstrap/ -o static/assets/lib/bootstrap.custom/main/",
    "docker-start": "docker-compose -f config/base/docker/compose.yaml up",
    "docker-stop": "docker-compose -f config/base/docker/compose.yaml down",
    "docker-build": "docker-compose -f config/base/docker/compose.yaml build",
    "docker-db": "docker-compose -f config/base/docker/compose.yaml up -d db",
    "cannon": "cd tool; ./cannon",
    "test": "npx mocha --require livescript ./test/index.ls",
    "coverage": "npx nyc --reporter=text npm run test"
  },
  "dependencies": {
    "@plotdb/block": "^5.2.0",
    "@plotdb/colors": "^0.0.3",
    "@plotdb/srcbuild": "^0.0.67",
    "@plotdb/suuid": "^0.5.1",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "chokidar": "^3.4.2",
    "csurf": "^1.11.0",
    "curegex": "^0.0.4",
    "express": "^4.17.1",
    "express-list-endpoints": "^5.0.0",
    "express-session": "^1.17.1",
    "i18next": "^19.8.3",
    "i18next-fs-backend": "^1.0.7",
    "i18next-http-middleware": "^3.0.6",
    "js-yaml": "^3.14.0",
    "jsdom": "^20.0.3",
    "jsonwebtoken": "^9.0.0",
    "lderror": "^2.4.2",
    "ldview": "^1.3.0",
    "livescript": "^1.6.0",
    "ls-lint": "^0.1.2",
    "marked": "^4.0.10",
    "mocha": "^9.2.2",
    "nodemailer": "^6.7.0",
    "nodemailer-mailgun-transport": "^2.1.3",
    "nyc": "^15.1.0",
    "passport": "^0.6.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-line-auth": "^0.2.9",
    "passport-local": "^1.0.0",
    "pg": "^8.3.3",
    "pg-pool": "^3.2.1",
    "pino": "^6.6.0",
    "pino-http": "^5.2.0",
    "pino-pretty": "^4.2.1",
    "proxise": "^1.0.1",
    "pug": "^3.0.0",
    "re2": "^1.15.9",
    "redis": "^4.2.0",
    "require-reload": "^0.2.2",
    "stylus": "^0.55.0",
    "template-text": "^0.1.2",
    "uglify-js": "^3.13.1",
    "uglifycss": "^0.0.29",
    "yargs": "^17.3.1"
  }
}
